<div class="row mtz">
    <div class="input-field">
        <select id="{{ id }}">
            <option value="" disabled selected>{{ placeholder }}</option>
            {% for option in options %}
            <option value="{{ option.value }}">{{ option.text }}</option>
            {% endfor %}
        </select>
        <label for="{{ id }}">{{ label }}</label>
    </div>
</div>